# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
        color_good="#1d1c21"
        color_degraded="#1d1c21"
        color_bad="#1d1c21"
        markup = "pango"
}
order += "wireless _first_"
order += "battery all"
order += "tztime local"

wireless _first_ {
        format_up = "<b>W: (%quality at %essid)</b>"
        format_down = "<b>No Connection</b>"
}


battery all {
        format = "<b>%status %percentage %remaining remaining</b>"
        
}

tztime local {
        format = "%Y-%m-%d %l:%M    "
}

load {
        format = "%1min"
}

disk "/" {
        format = "%avail"
}
